<div class="page">
  <h1><%= @cocktail.name  %></h1>
    <div class="ingredient">
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> <%= dose.ingredient.name %>
        <p><%= link_to 'Delete Ingredient', dose_path(dose), :method => 'delete' %><p>
      <% end %>
    </div>
    <div class="create-button"><%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    </div>
    <div class="create-button"><%= link_to 'Back to all cocktails', cocktails_path, class: "btn btn-primary" %>
    </div>
<div class="photo" style="background-image: url(<%= image_path("EclipseCocktails1.png",
        width: 300, height: 300) %>)">
</div>
</div>

